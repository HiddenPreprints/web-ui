{{> header}}

{{> navLeft}}

<div class="container" id="mainBody">

<form method="GET" action="" class="form-inline" id="searchForm">
  <div class="form-group">
    <!-- <label for="mainSearchInput">Search term</label> -->
    <input id="mainSearchInput" name="query" type="text" value="{{query}}" placeholder="Search" />
  </div>

  <button id="mainSearchSubmit" type="submit" class="btn btn-default">
    <span class="fa fa-search"></span>
  </button>

</form>

{{#if category}}
<p>
  <strong>Displaying 20 results out of {{resultsTotal}}
    {{#if query}} for term "{{query}}"{{/if}}
     in {{category}}.
  </strong>
</p>
{{/if}}

{{#each results}}
<div class="result-item">
  <span class="category">{{this.category}}</span>

  <h3>
    <a href="{{this.url}}" target="_blank">{{this.title}}</a>
  </h3>

  <span class="badge pull-right" title="Shadow Index">SI: {{this.shadow_index}}</span>

  <!-- <blockquote>{{this.abstract}}</blockquote> -->
  <p>
    {{this.authors}}
  </p>
  <!-- <p>
    &nbsp; &nbsp; &nbsp; &nbsp;
    &nbsp; &nbsp; &nbsp; &nbsp;
    Published: {{this.posted}}
    &nbsp; &nbsp; &nbsp; &nbsp;
    DOI: <a href="https://doi.org/{{this.doi}}">https://doi.org/{{this.doi}}</a>
  </p> -->
</div>
<hr />
{{/each}}

</div>

{{> footer}}
